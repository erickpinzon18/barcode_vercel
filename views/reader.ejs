													href="#"
													>&nbsp;Something else
													here</a
												>
											</div>
										</div>
									</div>
									<div class="card-body">
										<form
											action="/registrarProducto"
											id="formNuevoProducto"
											method="post"
										>
                                        <!-- INPUT INVISIBLE PARA EL ID DEL USUARIO -->
                                            <input
                                                type="hidden"
                                                name="usuario"
                                                value="<%= usuario.id %>"
                                            />
											<div class="mb-3">
												<label
													for="barcode"
													class="form-label"
													>Codigo de Barras</label
												>
												<input
													type="number"
													class="form-control"
													id="barcode"
													name="barcode"
                                                    placeholder="Escanear Codigo de Barras"
													required
												/>
											</div>
											<div class="mb-3">
												<label
													for="etiqueta"
													class="form-label"
													>Etiqueta</label
												>
												<input
													type="text"
													class="form-control"
													id="etiqueta"
													name="etiqueta"
                                                    placeholder="Etiqueta"
													required
												/>
											</div>
											<div class="mb-3">
												<div class="row">
													<label
														for="cantidad"
														class="form-label"
														>Cantidad</label
													>
													<div class="col">
														<input
															type="number"
															class="form-control"
															id="cantidad"
															name="cantidad"
															min="1"
															value="1"
															required
														/>
													</div>
													<div class="col">
														<button
															class="btn btn-success"
															id="btn_add"
														>
															+
														</button>
														<button
															class="btn btn-danger"
															id="btn_substract"
														>
															-
														</button>
													</div>
												</div>
											</div>
											<button
												type="submit"
												class="btn btn-primary"
											>
												Registrar
											</button>
											<button
												type="reset"
												class="btn btn-danger"
												id="btn_reset"
											>
												Limpiar
											</button>
										</form>
                                        <div class="container mt-3">
                                            <h5 class="text-warning text-center"><b><%= messages ? messages.producto ? messages.message + " | Etiqueta: " + messages.producto.etiqueta : messages.message : "" %></b></h5>
                                        </div>
									</div>
								</div>
								<div class="card shadow mb-4">
									<div
										class="card-header d-flex justify-content-between align-items-center"
									>
										<h6 class="text-primary fw-bold m-0">
											Productos
										</h6>
										<div class="dropdown no-arrow">
											<button
												class="btn btn-link btn-sm dropdown-toggle"
												aria-expanded="false"
												data-bs-toggle="dropdown"
												type="button"
											>
												<i
													class="fas fa-ellipsis-v text-gray-400"
												></i>
											</button>
											<div
												class="dropdown-menu shadow dropdown-menu-end animated--fade-in"
											>
												<p
													class="text-center dropdown-header"
												>
													dropdown header:
												</p>
												<a
													class="dropdown-item"
													href="#"
													>&nbsp;Action</a
												><a
													class="dropdown-item"
													href="#"
													>&nbsp;Another action</a
												>
												<div
													class="dropdown-divider"
												></div>
												<a
													class="dropdown-item"
													href="#"
													>&nbsp;Something else
													here</a
												>
											</div>
										</div>
									</div>
									<div class="card-body">
                                        <table class="table table-striped-columns mt-3">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Código</th>
                                                    <th scope="col">Producto</th>
                                                    <th scope="col">Cantidad</th>
                                                    <th scope="col">Usuario</th>
                                                    <th scope="col">Fecha Captura</th>
                                                    <th scope="col">Opciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% productos.map((producto) => { %>
                                                    <tr>
                                                        <td id="codigo_n<%= producto.codigo %>"><%= producto.codigo %></td>
                                                        <td id="etiqueta_n<%= producto.codigo %>"><%= producto.etiqueta %></td>
                                                        <td id="cantidad_n<%= producto.codigo %>"><%= producto.cantidad %></td>
                                                        <td id="cantidad_n<%= producto.codigo %>"><%= producto.id_usuario %></td>
                                                        <td id="cantidad_n<%= producto.codigo %>"><%= producto.fecha_cap %></td>
                                                        <td><a onclick="editarProducto('<%= producto.codigo %>')" class="btn btn-primary">Editar</a><a onclick="eliminarProducto('<%= producto.codigo %>')" class="btn btn-danger mt-1">Eliminar</a></td>
                                                    </tr>    
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
								</div>
							</div>
							<div
								class="col-md-12 col-lg-7 col-xl-7 col-xxl-7 offset-lg-0"
							>
								<div class="card shadow mb-4">
									<div
										class="card-header d-flex justify-content-between align-items-center"
									>
										<h6 class="text-primary fw-bold m-0">
											Scanner
										</h6>
