                            Recargar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- *** Modal EDITAR -->
		<div
            class="modal fade"
            id="modalEditar"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog">
                <div class="modal-content">
                    <form
                        action="/actualizarProducto"
                        id="formActualizarProducto"
                        method="post"
                    >
                        <div class="modal-header">
                            <h1
                                class="modal-title fs-5 text-primary"
                                id="staticBackdropLabel"
                            >
                                <b>EDITAR PRODUCTO</b>
                            </h1>
                        </div>
                        <div class="modal-body" id="modal_editar_body">
                                <!-- INPUT INVISIBLE PARA EL ID DEL USUARIO -->
                                <input
                                    type="hidden"
                                    name="usuario"
                                    value="<%= usuario.id %>"
                                />
                                <div class="mb-3">
                                    <label
                                        for="barcode"
                                        class="form-label"
                                        >Codigo de Barras</label
                                    >
                                    <input
                                        type="number"
                                        class="form-control"
                                        id="barcode_edit"
                                        name="barcode"
                                        placeholder="Escanear Codigo de Barras"
                                        required
                                        readonly
                                    />
                                </div>
                                <div class="mb-3">
                                    <label
                                        for="etiqueta"
                                        class="form-label"
                                        >Etiqueta</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="etiqueta_edit"
                                        name="etiqueta"
                                        placeholder="Etiqueta"
                                        required
                                    />
                                </div>
                                <div class="mb-3">
                                    <div class="row">
                                        <label
                                            for="cantidad"
                                            class="form-label"
                                            >Cantidad</label
                                        >
                                        <div class="col">
                                            <input
                                                type="number"
                                                class="form-control"
                                                id="cantidad_edit"
                                                name="cantidad"
                                                min="1"
                                                value="1"
                                                required
                                            />
                                        </div>
                                        <div class="col">
                                            <button
                                                type="button"
                                                class="btn btn-success"
                                                id="btn_add_edit"
                                            >
                                                +
                                            </button>
                                            <button
                                                type="button"
                                                class="btn btn-danger"
                                                id="btn_substract_edit"
                                            >
                                                -
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button
                                type="submit"
                                class="btn btn-success"
                                data-bs-dismiss="modal"
                            >
                                Editar
                            </button>
                            <button
                                type="reset"
                                class="btn btn-danger"
                                data-bs-dismiss="modal"
                                >
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- ? Modal ELIMINAR -->
		<div
            class="modal fade"
            id="modalEliminar"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog">
                <div class="modal-content">
                    <form
                        action="/eliminarProducto"
                        id="formEliminarProducto"
                        method="post"
                    >
                        <div class="modal-header">
                            <h1
                                class="modal-title fs-5 text-danger"
                                id="staticBackdropLabel"
                            >
                                <b>ELIMINAR PRODUCTO</b>
                            </h1>
                        </div>
                        <div class="modal-body" id="modal_eliminar_body">
                                <div class="mb-3">
                                    <label
                                        for="barcode"
                                        class="form-label"
                                        >Codigo de Barras</label
                                    >
                                    <input
                                        type="number"
                                        class="form-control"
                                        id="barcode_delete"
                                        name="barcode"
                                        placeholder="Escanear Codigo de Barras"
                                        required
                                        readonly
                                    />
                                </div>
                                <div class="mb-3">
                                    <label
                                        for="etiqueta"
                                        class="form-label"
                                        >Etiqueta</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="etiqueta_delete"
                                        name="etiqueta"
                                        placeholder="Etiqueta"
                                        readonly
                                        required
                                    />
                                </div>
                                <div class="mb-3">
                                    <div class="row">
                                        <label
                                            for="cantidad"
                                            class="form-label"
                                            >Cantidad</label
                                        >
                                        <div class="col">
                                            <input
                                                type="number"
                                                class="form-control"
                                                id="cantidad_delete"
                                                name="cantidad"
                                                min="1"
                                                value="1"
                                                readonly
                                                required
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button
                                type="submit"
                                class="btn btn-danger"
                                data-bs-dismiss="modal"
                            >
                                Eliminar
                            </button>
                            <button
                                type="reset"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                                >
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
	</body>
